<!DOCTYPE html>
<html lang="en">

        <!-- Include Head from Layout-->
        <%- include ('layouts/header'); -%>

    <body>

    <!-- Include Nav From Layouts -->
    <%- include ('layouts/navbar'); -%>

        <!-- Page Header-->
        <header class="masthead" style="background-image: url('<%=blogpost.image%>')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <h1 class="post-title"><%=blogpost.title%></h1>
                            <h3 class="post-subtitle"><%=blogpost.body%></h3>
                            <span class="meta">
                                Posted by: <a href="#"><%=blogpost.username%> </a> on
                                <%=blogpost.datePosted.toDateString()%>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
        <article class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <h2 class="post-subtitle"><%=blogpost.title%></h2>
                    </div>
                </div>
            </div>
        </article>

        <!-- Include Footer From Layouts -->
        <%- include ('layouts/footer'); -%>

        <!-- Include Scripts From Layouts -->
        <%- include ('layouts/scripts'); -%>

    </body>
</html>
